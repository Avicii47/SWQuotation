
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/User/AddUser.js"></script>
<link href="~/plugins/sweetalert2/sweetalert2.css" rel="stylesheet" />
<script src="~/plugins/sweetalert2/sweetalert2.js"></script>
<script src="~/plugins/toastr/toastr.min.js"></script>
<link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />

<div style="visibility:hidden"></div>


<div class="container-fluid" id="Container" style="width:60%">
    <div class="card card-warning card-outline">
        <div class="card-header">
            <header><center><h1>Add User</h1></center></header>
            <div class="card-body">

                <div class="form-group">
                    <label class="col-sm-10 col-form-label">Name</label>
                    <input type="text" class="form-control" autocomplete="off" maxlength="50" placeholder="Enter Name" id="UserName">
                </div>
                <div class="form-group">
                    <label class="col-sm-10 col-form-label">Mobile No</label>
                    <input oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                           type="number" class="form-control" onchange="CheckValidPhoneno();" placeholder="Enter Mobile No" id="MobNo" maxlength="10" />
                </div>
                <div class="form-group">
                    <label class="col-sm-10 col-form-label">User Name</label>
                    <center><input type="text" class="form-control" autocomplete="off" maxlength="50" placeholder="Enter UserId" id="UserId"></center>
                </div>
                <div class="form-group">
                    <label class="col-sm-10 col-form-label">Password</label>
                    <input type="password" class="form-control" autocomplete="off" maxlength="50" placeholder="Enter Password" id="Password">
                </div>
                <div class="form-group">
                    <label class="col-sm-10 col-form-label">Role</label>
                    <select class="form-control select2" id="ddlrole" onselect="this.value"></select>
                </div>
                <div class="form-group">
                    <center>
                    <button class="btn btn-warning" type="submit" onclick="AddUser();">
                        <i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Add User
                    </button>
                    </center>
                </div>
            </div>
        </div>
    </div>
</div>